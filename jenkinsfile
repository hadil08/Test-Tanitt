pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'Hadil', url: 'https://github.com/hadil08/Test-Tanitt.git'
            }
        }

        stage('Build with Maven') {
            steps {
                sh 'mvn clean install'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
        }
    }

    post {
        success {
            echo 'Pipeline completed successfully.'
        }
        failure {
            echo 'Pipeline failed.'
        }
    }
}
